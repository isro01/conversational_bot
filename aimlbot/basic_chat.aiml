<aiml version="1.0.1" encoding="UTF-8">

    <category>
        <pattern>HELLO</pattern>
        <template>
            <random>
                <li> Hello!!! </li>
                <li> Well, Hello!!! </li>
                <li> Hi there how may I help you?</li>
            </random>

            What's your name?
        </template>
    </category>
    <category>
        <pattern> * </pattern>
        <template>
            <think><set name= "username"> <star/></set></think>
            Hi<get name= "username"/> :)  

            Send 1 if you would like to place a new order
            Send 2 if you would like to track/change your current order
            Send 3 if you would like to record a complaint
        </template>
    </category>


    <category>
        <pattern>WHAT ARE YOU</pattern>
        <template>
            I'm the customer care bot for XYZ company
        </template>
    </category>


    <topic name = "new order">
    <category>
        <pattern>1</pattern>
        <template>
            <set name = "topic">new order</set>
            To place a new order please message the item code 
            </template>
    </category>

        <category>
            <pattern> * </pattern>
            <template>
                <srai>Order confirmed : <star/></srai>
                Please provide your mobile number : 
            </template>
        </category>

        <category>
            <pattern> * </pattern>
            <template>

                <srai> A message will be sent soon to <star/> confirming the order </srai>
            </template>
        </category>
    </topic>








</aiml>